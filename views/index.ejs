@import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap')
;

*{
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}


body{
   
    width: 100%;
    background-color: rgb(255, 255, 255);
    background-size: cover;
    background-position: center;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
    
    }

#logo {
    display:inline-block;
    justify-content: left;
    font-family: Forte regular;
    color:rgb(217, 155, 237);
    font-size: 200%;
    border:none;
    background: transparent;
    cursor: pointer;
    margin-right: 90%;
    margin-bottom: 0;

}

/* for image sectiom 1 */

.new-people{

    display: flex;
    background: #a6dbff;
    justify-content: space-between;
    width: 100%;
    
}

.new-people img{
    width: 50%;
    height:50%
}

.new-people .text1{
    font-size: x-large;
    font-family: poppins;
    padding: 30px 40px;
    margin-top: 20%;
}

/* for image section 2*/

.chat{
    display:flex;
    background: #fff;
    justify-content: space-between;
}

.chat img{
    width: 50%;
    height: 50%;

}

.chat .text2{
    font-size: x-large;
    font-family: poppins;
    padding:30px 40px;
    margin-top: 20%;
}

/*for image section 3 */

.thoughts{
    display:flex;
    background: #ffffff;
    justify-content: space-between;
}

.thoughts img{
    width:50%;
    height: 50%;
}

.thoughts .text3{
    font-size: x-large;
    font-family: poppins;
    padding:30px 40px;
    margin-top: 20%;
}

/* for image section4*/

.media{
    display:flex;
    background: #fbd5fd;
    justify-content: space-between;
    height: 700px;
}

.media img{
    width:100%;
    height: 100%;
}

.text4{
    font-size: x-large;
    font-family: poppins;
    padding:40px 40px;
    margin-top: 12%;
}

/* for page reveal*/

.reveal{
    position:relative;
    transform: translateY(150px);
    opacity: 0;
    transition: all 3s ease;
}

.reveal.active{
    transform: translateY(0px);
    opacity: 1;
}

/* for footer*/

footer {
   
    left: 0;
    bottom: 0;
    width: 100%;
    background: #000000; /* Adjust background color if needed */
    overflow: auto;
    padding: 20px 20px;
    box-shadow: 0 0 10px rgba(0, 0, 0, .1);
    border: #000000 0.5px solid;
    z-index: 999; /* Ensure it's above other elements */
}

.footer-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.logo-end img {
    width: 150px;
    height: auto;
}

.navi {
    text-align: center;
}

.foot a {
    color: #ffffff;
    text-decoration: none;
    margin: 0 10px;
}

.foot a:hover {
    text-decoration: underline;
}




    </style>
</head>

